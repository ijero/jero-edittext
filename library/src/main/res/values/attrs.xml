<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="JeroSingleLineEditText">
        <attr name="android:text" />
        <attr name="android:textColor" />
        <attr name="android:textSize" />
        <attr name="android:hint" />
        <attr name="android:textColorHint" />
        <attr name="showClear" format="boolean" />
        <attr name="clearImage" format="reference" />
        <attr name="showEye" format="boolean" />
        <attr name="eyeImage" format="reference" />
        <attr name="eyeCloseImage" format="reference" />
        <attr name="inputType">
            <enum name="text" value="0" />
            <enum name="number" value="1" />
        </attr>
        <attr name="showContent" format="boolean" />
    </declare-styleable>

    <declare-styleable name="JeroMultiLineEditText">
        <attr name="android:text" />
        <attr name="android:hint" />

    </declare-styleable>
</resources>